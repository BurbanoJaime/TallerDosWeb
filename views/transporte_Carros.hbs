</head>

<body>
    <header>
        <nav class="flex-ext-cont">
            <div class="logo">
                <a href="/index">
                    <img src="/img/logo.png" alt="Logo">
                </a>
            </div>

            <div>
                <div class="dropdown">
                    <button class="dropbtn">TRANSPORTE</button>
                    <div class="dropdown-content">
                        <a href="/transporte/Alquiler_Vehiculos">Alquiler de Vehículos</a>
                        <a href="#">Grúas</a>
                        <a href="#">Mensajería</a>
                        <a href="#">Personal</a>
                        <a href="#">Mudanzas</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">SCOUTING</button>
                    <div class="dropdown-content">
                        <a href="#">Apartamentos</a>
                        <a href="#">Casas</a>
                        <a href="#">Fincas</a>
                        <a href="#">Edificios</a>
                        <a href="#">Cementerio</a>
                        <a href="#">Locales</a>
                        <a href="#">Lotes</a>
                        <a href="#">Bodegas</a>
                        <a href="#">Habitaciones</a>
                        <a href="#">Hoteles</a>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="dropbtn">CASTING</button>
                    <div class="dropdown-content">
                        <a href="#">Actores</a>
                        <a href="#">Modelos</a>
                        <a href="#">Reparto</a>
                        <a href="#">Extras</a>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="dropbtn">DECORACIÓN</button>
                    <div class="dropdown-content">
                        <a href="#">Maquillaje</a>
                        <a href="#">Diseño de Interiores</a>
                        <a href="#">Diseño de Vestuario</a>
                        <a href="#">Estilistas</a>
                        <a href="#">Vestuaristas</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">OTROS</button>
                    <div class="dropdown-content">
                        <a href="#">Electricidad</a>
                        <a href="#">Abogados</a>
                        <a href="#">Banquetes y Refrigerio</a>
                        <a href="#">Cubrimiento de Eventos</a>
                        <a href="#">Representación Artistica</a>
                        <a href="#">Corredores de Seguros</a>
                        <a href="#">Publicidad</a>
                    </div>
                </div>
                <div class="dropdown buscadoor">
                    <button class="dropbtn">
                        <i class="fas fa-search"></i>
                    </button>
                    <!-- <input type="text" name="info" class "info" placeholder="Buscador"> 
                        </input>-->
                </div>
            </div>
            <div class="flex-ext-cont user">
                <div>
                    <p>Guillermo del Toro</p>
                </div>
                <div>
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <i class="fas fa-truck"></i>
                </div>
            </div>
        </nav>
    </header>


    <section class="contenedor flex-basic-cont">
        <section class="izq">
            <p class="mapaSitio">
                <a href="/index">PREX </a> /
                <a href="">TRANSPORTE </a>/
                <a href="/transporte/Alquiler_Vehiculos">ALQUILER DE VEHÍCULOS</a>
            </p>
            <section class="filtro">
                <article class=" flex-ext-cont orden">
                    <p>Ordenar por</p>

                    <select name="orden">
                        <option value="0" selected>Default</option>
                        <option value="1">Precio Ascendente</option>
                        <option value="2">Precio Descendente</option>
                        <option value="3">Descuentos</option>
                    </select>

                </article>

                <article class="calendario">
                    <h3>Calendario</h3>
                </article>

                <article class="precio">
                    <h3>Precio</h3>
                </article>

                <article class="color">
                    <h3>Precio</h3>
                </article>

                <article class="tema">
                    <h3>Temática</h3>
                </article>

                <article class="borrar">
                    <h3>Borrar Filtros</h3>
                </article>
            </section>

        </section>

        <section class="productos flex-basic-cont">

            {{#each carros}}
            <article>
                <a href="/transporte/Alquiler_Vehiculos/{{_id}}">

                    <div class="img-info">
                        <img src="{{imaUno}}">
                    </div>
                    <h1>{{marca}} {{modelo}}</h1>
                    <div class="info">
                        <h2>$ {{precio}} COP</h2>
                        <p>PRECIO DIARIO POR UNIDAD</p>
                    </div>
                </a>
            </article>
            {{/each}}
        </section>


    </section>
    <footer class="flex-basic-cont">
        <div class="infoo">
            <h1>SOBRE PREX</h1>
            <p>
                <a href="#">¿Quiénes somos?</a>
            </p>
            <p>
