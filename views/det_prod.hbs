    <section class="flex-basic-cont producto_detallado">
        <section class="flex-basic-hijo imagenes">
            <article class="img_principal">
                <div style="background-Image:url('{{carro.imaUno}}')!important;"></div>
            </article>
            <article class="flex-ext-cont imgs_secundarias">
                <div class="uno" style="background-image:url('{{carro.imaUno}}')!important;"></div>
                <div class="dos" style="background-image:url('{{carro.imaDos}}')!important;"></div>
                <div class="tres" style="background-image:url('{{carro.imaTres}}')!important;"></div>
                <div class="cuatro" style="background-image:url('{{carro.imaCuatro}}')!important;"></div>
                            <div class="cinco" style="background-Image:url('{{carro.imaCinco}}')!important;"></div>

            </article>
            <article class="flex-basic-cont imgs_secundarias">
                <div class="seis" style="background-Image:url('{{carro.imaSeis}}')!important;"></div>
                <div class="siete" style="background-Image:url('{{carro.imaSiete}}')!important;"></div>
                <div class="ocho"></div>
            </article>
        </section>
        <section class="flex-basic-hijo info_prod">

            <article>
                <div>
                    <h1>{{carro.marca}} {{carro.modelo}}</h1>
                </div>
                <div>
